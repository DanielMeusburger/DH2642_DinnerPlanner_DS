 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/this_is_selected_course_top_view_id">
     <LinearLayout
         android:id="@+id/ll_leftarrow"
         android:layout_width="80dp"
         android:layout_height="40dp"
         android:background="#800000"
         android:gravity="center"
         >
         <ImageView
             android:layout_width="50dp"
             android:layout_height="40dp"
             android:background="@drawable/left_arrow"/>

     </LinearLayout>
     <!--<TextView
         android:layout_width="wrap_content"
         android:layout_height="40dp"
         android:id="@+id/id_TotalCost"
         android:text="Total Cost: 1250 Kr"
         android:gravity="center_vertical"
         android:layout_alignParentRight="true"
         android:textSize="25sp"
         />-->
     <include
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_toRightOf="@id/ll_leftarrow"
         android:paddingLeft="5dp"
         layout="@layout/total_cost" />

     <LinearLayout
         android:layout_width="60dp"
         android:layout_height="80dp"
         android:layout_below="@id/ll_leftarrow"
         android:layout_marginLeft="30dp"
         android:layout_marginTop="40dp"
         android:id="@+id/ll_ingredients"
         android:orientation="vertical">
         <LinearLayout
             android:layout_width="50dp"
             android:layout_height="50dp"
             android:background="#800000"
             android:gravity="center"
             >
             <ImageView
                 android:layout_width="43dp"
                 android:layout_height="43dp"
                 android:id="@+id/img_ingredients"
                 android:background="@drawable/ingredients"/>
         </LinearLayout>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="20dp"
             android:text="Ingredients"
             android:textSize="13sp"
             android:gravity="center"/>
     </LinearLayout>
     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="5dp"
         android:layout_marginLeft="30dp"
         android:orientation="vertical"
         android:layout_below="@id/ll_leftarrow"
         android:layout_toRightOf="@id/ll_ingredients">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Instructions"
             android:textStyle="bold"
             android:layout_gravity="center_horizontal"
             android:textSize="15sp"
             />
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:orientation="horizontal">
             <LinearLayout
                 android:layout_width="60dp"
                 android:layout_height="80dp"
                 android:orientation="vertical">
                 <LinearLayout
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     android:background="#00800000"
                     android:gravity="center"
                     >
                     <ImageView
                         android:layout_width="53dp"
                         android:layout_height="53dp"
                         android:id="@+id/starter_selected_item_img"
                         android:background="@drawable/crostini"/>
                 </LinearLayout>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="20dp"
                     android:id="@+id/starter_selected_item_text"
                     android:text="Crostini"
                     android:textSize="15sp"
                     android:gravity="center"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="60dp"
                 android:layout_height="80dp"
                 android:layout_marginLeft="7dp"
                 android:orientation="vertical">
                 <LinearLayout
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     android:background="#00800000"
                     android:gravity="center"
                     >
                     <ImageView
                         android:layout_width="53dp"
                         android:layout_height="53dp"
                         android:id="@+id/menu_selected_item_img"
                         android:background="@drawable/chicken"/>
                 </LinearLayout>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="20dp"
                     android:id="@+id/menu_selected_item_text"
                     android:text="Chicken"
                     android:textSize="15sp"
                     android:gravity="center"/>
             </LinearLayout>
             <LinearLayout
                 android:layout_width="60dp"
                 android:layout_height="80dp"
                 android:layout_marginLeft="7dp"
                 android:orientation="vertical">
                 <LinearLayout
                     android:layout_width="60dp"
                     android:layout_height="60dp"
                     android:background="#00800000"

                     android:gravity="center"
                     >
                     <ImageView
                         android:layout_width="53dp"
                         android:layout_height="53dp"
                         android:id="@+id/dessert_selected_item_img"
                         android:background="#800000"/>
                 </LinearLayout>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="20dp"
                     android:id="@+id/dessert_selected_item_text"
                     android:text=""
                     android:textSize="15sp"
                     android:gravity="center"/>
             </LinearLayout>
         </LinearLayout>
     </LinearLayout>
     <View
         android:id="@+id/vhorizontalbar"
         android:layout_width="match_parent"
         android:layout_height="2dp"
         android:background="#888888"
         android:layout_marginLeft="60dp"
         android:layout_marginRight="60dp"
         android:layout_marginTop="5dp"
         android:layout_below="@id/ll_ingredients" />


     <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/vhorizontalbar">
         <include
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/vhorizontalbar"
             layout="@layout/selected_course_down_view" />
     </ScrollView>
 </RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="se.kth.csc.iprog.dinnerplanner.android" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CourseSelectionActivity"
            android:label="@string/title_activity_course_selection"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="se.kth.csc.iprog.dinnerplanner.android.MainActivity" />
        </activity>
        <activity
            android:name=".SelectedMenuActivity"
            android:label="@string/title_activity_selected_menu" >
        </activity>
    </application>

</manifest>
